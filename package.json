{
  "private": true,
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "name": "vistara",
  "description": "This is a component library",
  "author": "ajiu9 <615944323@qq.com> (https://github.com/ajiu9)",
  "keywords": [
    "vue",
    "component",
    "javaScript"
  ],
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "cz": "czg",
    "dev": "pnpm -C play dev",
    "build": "node scripts/build.js",
    "lint": "eslint . --fix",
    "gen:version": "tsx scripts/gen-version.ts",
    "release": "bumpp -r && pnpm -r publish --access public",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@vistara/components": "workspace:*",
    "big.js": "^6.2.1"
  },
  "devDependencies": {
    "@ajiu9/eslint-config": "^1.0.3",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vistara/build-utils": "workspace:*",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "bumpp": "^9.4.1",
    "cz-git": "^1.9.3",
    "czg": "^1.9.3",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "execa": "^9.3.0",
    "lint-staged": "^15.2.7",
    "minimist": "^1.2.8",
    "rimraf": "^6.0.0",
    "rollup": "^4.18.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "sass": "^1.77.7",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.3",
    "unplugin-vue-macros": "^2.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
